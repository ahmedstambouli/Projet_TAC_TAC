<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFA500" /> <!-- Use your desired orange color -->
        </shape>
    </item>
    <item android:top="-20dp" android:right="-20dp" android:left="-20dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp"
                android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
            <solid android:color="#FFA500" /> <!-- Use the same orange color as above -->
        </shape>
    </item>
</layer-list>
